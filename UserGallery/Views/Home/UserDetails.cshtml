@model  UserGallery.Models.UserViewModel
@{
    ViewBag.Title = "UserDetails";
}

<h4>UserDetails</h4>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>User Id </th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name </th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.address.Street + "," + @Model.address.Suite + "," + @Model.address.City + "," + @Model.address.Zipcode</td>
    </tr>
    <tr>
        <th>Posts</th>
        
    </tr>
  
</table>
